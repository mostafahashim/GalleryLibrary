<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="hashim.gallery.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnOpenGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_100"
            android:onClick="@{()->viewModel.observer.openGallery()}"
            android:text="@string/open_gallery" />

        <ImageView
            android:id="@+id/ivAvatar"
            imageUrlCircle="@{viewModel.avatar}"
            android:layout_width="@dimen/padding_300"
            android:layout_height="@dimen/padding_300"
            android:layout_below="@id/btnOpenGallery"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/padding_100"
            android:adjustViewBounds="true"
            android:src="@mipmap/ic_launcher_round" />

    </RelativeLayout>

</layout>